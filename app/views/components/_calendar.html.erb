<div class="d-flex position-relative" data-controller="calendar">
  <div class="extension d-none" data-target="calendar.extension">
    <h1>textttttttttttt</h1>
  </div>
  <%= month_calendar(attribute: :due_date, events: assignments) do |date, assignments| %>
    <div class="calendar-item">
      <span class="day-container" data-action="click->calendar#extend">
        <%= date.day %>
      </span>
      <div class="assignments-container">
        <% assignments.each do |assignment| %>
          <i class="fa-solid fa-circle"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
