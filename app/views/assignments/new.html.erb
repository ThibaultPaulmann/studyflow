<div class="container" id="simple-form-new-assignment">
  <div class="simple-form-input-assignment">
    <%= simple_form_for [@course, @assignment] do |f| %>
      <div>
        <h1 id="header-simple-form"><span class="auto-type-assignment"></span></h1>
      </div>
      <div class="form-group col-md-6">
        <%= f.input :title %>
      </div>
      <div class="form-group col-md-6">
        <%= f.input :due_date, as: :datetime %>
      </div>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.submit class:"btn create-submit-btn"%>
    <% end %>
  </div>
</div>


