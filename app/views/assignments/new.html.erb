<div class="container" id="simple-form-new-assignment">
<h1 id="header-simple-form"><span class="auto-type"></span></h1>
<br>
  <%= simple_form_for [@course, @assignment] do |f| %>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.input :due_date, as: :datetime %>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :title %>
    </div>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit class:"btn create-submit-btn"%>
  <% end %>
</div>


