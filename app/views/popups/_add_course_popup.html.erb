<div class="container" id="simple-form-new-assignment" data-controller="typed-titles" data-typed-titles-target="form" data-user-progress-target="popup">
  <div class="popup-content">
    <i class="fa-solid fa-x close-button" data-action="click->user-progress#close" data-user-progress-target="close"></i>

    <%= simple_form_for [@course, @assignment] do |f| %>
      <div>
        <h1 id="header-simple-form"><span class="auto-type-assignment"></span></h1>
      </div>
      <div class="form-group col-md-6">
        <%= f.input :title %>
      </div>
      <div class="form-group col-md-6">
        <%= f.input :due_date, as: :date, html5: :true, input_html: {class: "datepicker"} %>
      </div>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.submit class:"btn create-submit-btn"%>
    <% end %>
  </div>
</div>
